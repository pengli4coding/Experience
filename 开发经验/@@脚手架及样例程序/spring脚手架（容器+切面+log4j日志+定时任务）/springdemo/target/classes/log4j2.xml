<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" monitorInterval="30">

    <Properties>
        <!--全局的日志输出格式-->
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout charset="UTF-8" pattern="${LOG_PATTERN}"/>
        </Console>

        <!--DEBUG级别日志-->
        <RollingFile name="debugLogFile" fileName="logs/debug/app.log"
                     filePattern="logs/debug/$${date:yyyy-MM}/app-%d{yyyy-MM-dd-HH}-%i.log.gz">
            <LevelRangeFilter minLevel="DEBUG" maxLevel="DEBUG" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout charset="UTF-8" pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>

        <!--INFO级别日志-->
        <RollingFile name="infoLogFile" fileName="logs/info/app.log"
                     filePattern="logs/info/$${date:yyyy-MM}/app-%d{yyyy-MM-dd-HH}-%i.log.gz">
            <LevelRangeFilter minLevel="INFO" maxLevel="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout charset="UTF-8" pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>

        <!--ERROR级别日志-->
        <RollingFile name="errorLogFile" fileName="logs/error/app.log"
                     filePattern="logs/error/$${date:yyyy-MM}/app-%d{yyyy-MM-dd-HH}-%i.log.gz">
            <LevelRangeFilter minLevel="ERROR" maxLevel="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <PatternLayout charset="UTF-8" pattern="${LOG_PATTERN}"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>

    </Appenders>
    <Loggers>
        <!--给命名空间指定日志级别-->
        <!--additivity为false表示如果匹配多个Logger，则只在当前Logger输出-->
        <!--<Logger name="com.pl.Bar" level="trace" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>-->

        <!--根日志级别，如果没有给命名空间指定日志级别，默认使用根日志级别-->
        <!--all》trace》debug》info》warn》error》fatal》off-->
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="debugLogFile"/>
            <AppenderRef ref="infoLogFile"/>
            <AppenderRef ref="errorLogFile"/>
        </Root>
    </Loggers>
</Configuration>